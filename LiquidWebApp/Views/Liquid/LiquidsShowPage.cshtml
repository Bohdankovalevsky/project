@using LiquidCore
@using LiquidWebApp.Data
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using System
@model List<LiquidINfo>

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.88.1">
    <title>Album example · Bootstrap v5.1</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/album/">

    

    <!-- Bootstrap core CSS -->
<link href="../assets/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

     
    </style>

    
  </head>
  <body>
    


<main>
      <form class="d-flex" asp-controller="Liquid" asp-action="search">
                        <input class="form-control me-sm-2" type="search" name="text" placeholder="Введіть текст...." aria-label="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Шукати</button>
                    </form>

    
  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
         
       @foreach(LiquidINfo liquidINfo in Model )

        {
                        <div class="col">
                            <div class="card shadow-sm">
                                <svg class="bd-placeholder-img card-img-top" width="100%" height="20" xmlns="http://www.w3.org/2000/svg" role="img" 
                                aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><img src="@liquidINfo.picture" ></svg>

                                <div class="card-body">
                                    
                                    <p class="card-text" >@liquidINfo.company.CompanyName @liquidINfo.taste</p>
                                    <div class="d-flex justify-content-between align-items-center">

                                        
                                        
                                        <div class="btn-group">
                                           <a href=" ViewLiquid/@liquidINfo.Id"> <button type="button" class="btn btn-sm btn-outline-secondary">Детальніше</button></a>
                                            @if(User.Identity.Name=="admin@liquid.com")
                                            {
                                     <a href="edit/@liquidINfo.Id"> <button type="button" class="btn btn-sm btn-outline-secondary">Редагувати</button></a>
                                       <a asp-controller="liquid" asp-action="remove" asp-route-id="@liquidINfo.Id"> <button type="button" class="btn btn-sm btn-outline-secondary">Видалити</button></a>
                                      }
                                        </div>
                                        

                                        
              </div>
            </div>
          </div>
        </div>
        }

        
      </div>
    </div>
  </div>


</main>

    <script src="../assets/dist/js/bootstrap.bundle.min.js"></script>

      
  </body>
</html>
